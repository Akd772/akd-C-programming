#include<stdio.h>
#include<conio.h>
int main()
{
 char word[20];
 int i;
 int vount = 0;
 int count = 0;
 int space = 0;
 printf("Enter a word or sentence\n");
 scanf("%s",&word);
 clrscr();
 for (i = 0;word[i] != 0;i++)
 {


   if(word[i] == 'a')
   {
    vount = vount + 1;
   }
   else if (word[i] == 'e')
   {
    vount = vount + 1;
   }
   else  if (word[i] == 'i')
   {
    vount = vount + 1;
   }
   else  if (word[i] == 'o')
   {
    vount = vount + 1;
   }
   else  if (word[i] == 'u')
   {
    vount = vount + 1;
   }
   else if (word[i]== 'b' ||word[i] == 'c'||word[i] =='d'||word[i] =='f'||word[i] =='g'||word[i] =='h'||word[i] =='j'
   ||word[i] =='k'||word[i] =='l'||word[i] =='m'||word[i] =='n'||word[i] =='p'||word[i] =='q'||word[i] =='r'||word[i] =='s'||word[i] =='t'||word[i] =='v'
   ||word[i] =='w'||word[i] =='x'||word[i] =='y'||word[i] =='z')
   {
    count = count + 1;
   }
 }
 printf("No of vowels : %d\n",vount);
 printf("No of consonants : %d\n",count);
}
